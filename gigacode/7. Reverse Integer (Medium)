def reverse(self, x: int) -> int:
    is_negative = x < 0
    x = abs(x)
    reversed_x = 0

    while x > 0:
        digit = x % 10
        if reversed_x > 2**31 // 10 or (reversed_x == 2**31 // 10 and digit > 7):
            return 0
        reversed_x = reversed_x * 10 + digit
        x //= 10

    return -reversed_x if is_negative else reversed_x
