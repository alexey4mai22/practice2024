def threeSumClosest(self, nums: List[int], target: int) -> int:
    nums.sort()
    closest = float('inf')

    for i in range(len(nums)):
        if i > 0 and nums[i] == nums[i-1]:
            continue

        j, k = i + 1, len(nums) - 1

        while j < k:
            sum = nums[i] + nums[j] + nums[k]
            if abs(sum - target) < abs(closest - target):
                closest = sum

            if sum < target:
                j += 1
            else:
                k -= 1

    return closest
